<Window x:Class="GradingEditor.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username:" Margin="10" />
            <TextBox Name="UsernameTextBox" Width="200" />
            <TextBlock Text="Password:" Margin="10" />
            <PasswordBox Name="PasswordBox" Width="200" />
            <Button Content="Login" Width="200" Margin="10" Click="OnLoginClick" />
        </StackPanel>
    </Grid>
</Window>